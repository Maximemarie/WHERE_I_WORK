
<div class="place-background" style="background-image: url(<%= @booking.place.photos.first.url %>)">
<div class ="fond">
  <%= render "shared/headerphoto_return"%>

  <div class = "card">
    <%# <h1> Your confirmation </h1> %>

    <div class ="details">


        <div class ="detailsinfo">
          <p class = "date">
            <%= @booking.place.name %>
          </p>
          <p class = "time">
            <%= @booking.time.strftime("%A, %d %b %Y %l:%M %p") %>
          </p>
          <p>
            at
          </p>
          <p class = "location">
            <%= @booking.place.location %>
          </p>
        </div>


        <p class ="advice">
          Please note that your reservation will be valid for 45 minutes on the selected date.
        </p>
        <p class ="reminder">
          After leaving the place, please don't forget to <%= link_to "Leave Review", new_place_reviews_path(@booking.place), class:"reminderbtn"%>.
          </p>
    </div>
  </div>

    <%# <h2>We can't wait to see you !</h2> %>
</div>
</div>
